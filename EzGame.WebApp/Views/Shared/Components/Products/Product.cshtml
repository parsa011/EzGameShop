@model IEnumerable<Game>


<div class="col-lg-12 col-md-12 col-xs-12 pr order-1 d-block">
    <div class="slider-widget-products">
        <div class="widget widget-product card">
            <header class="card-header pt-2 pr-4">
                <span class="title-one">جدید ترین ها</span>
            </header>
            <div class="product-carousel owl-carousel owl-theme owl-rtl owl-loaded owl-drag">
                <div class="owl-stage-outer">
                    <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2234px;">
                        @foreach (var item in Model.Take(5).OrderBy(p=>p.CreatedTime))
                        {
                            <div class="owl-item active" style="width: 309.083px; margin-left: 10px;">
                                <div class="item">
                                    <a href="#" class="d-block hover-img-link">
                                        <img src="~/GameImages/@item.ImageName" class="img-fluid" alt="">
                                    </a>
                                    <h2 class="post-title">
                                        <a href="#">
                                            @item.Title-@if (item.GameEditions.Any()) {  <p >@item.GameEditions[0].Title</p> }
                                        </a>
                                    </h2>
                                    <div class="price">
                                        @*<del><span>@item.<span>تومان</span></span></del>*@
                                        <ins><span>-@if (item.GameEditions.Any()) {<p>@item.GameEditions[0].Price</p>}<span>تومان</span></span></ins>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="owl-nav">
                    <button type="button" role="presentation" class="owl-prev disabled">
                        <i class="fa fa-angle-right"></i>
                    </button>
                    <button type="button" role="presentation" class="owl-next">
                        <i class="fa fa-angle-left"></i>
                    </button>
                </div>
                <div class="owl-dots disabled"></div>
            </div>
        </div>
    </div>
</div>
